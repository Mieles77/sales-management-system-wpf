<Page x:Class="Prueba_Apis.Views.ChatbotView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Asistente IA" Background="#F5F5F7">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER CON BOTÓN LIMPIAR -->
        <Border Grid.Row="0" Background="#7163BA" Padding="20,15" CornerRadius="0,0,20,20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Robot" Width="30" Height="30" Foreground="White" VerticalAlignment="Center"/>
                    <StackPanel Margin="15,0">
                        <TextBlock Text="Asistente de Inventario IA" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="En línea - Consulta stock, ventas y análisis" FontSize="12" Foreground="#E1DDF9"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botón para limpiar historial -->
                <Button HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Command="{Binding LimpiarHistorialCommand}"
                        ToolTip="Limpiar historial de chat">
                    <materialDesign:PackIcon Kind="DeleteSweep" Width="24" Height="24" Foreground="White"/>
                </Button>
            </Grid>
        </Border>

        <!-- CHAT MENSAJES -->
        <ScrollViewer Grid.Row="1" x:Name="ChatScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      Margin="10"
                      Padding="5">
            <ItemsControl ItemsSource="{Binding Mensajes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5,10">
                            <Border CornerRadius="15" Padding="12,8" MaxWidth="500"
                                    HorizontalAlignment="{Binding Alineacion}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EsUsuario}" Value="True">
                                                <Setter Property="Background" Value="#7163BA"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel>
                                    <TextBlock Text="{Binding Contenido}" 
                                               TextWrapping="Wrap" 
                                               FontSize="14">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#333333"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EsUsuario}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Hora}" 
                                               FontSize="10" 
                                               Opacity="0.7" 
                                               HorizontalAlignment="Right" 
                                               Margin="0,4,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EsUsuario}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- INPUT DE MENSAJE -->
        <materialDesign:Card Grid.Row="2" Margin="15" UniformCornerRadius="25">
            <Grid Margin="15,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtMensaje" 
                         materialDesign:HintAssist.Hint="Pregunta sobre stock, ventas o reportes..."
                         BorderThickness="0"
                         VerticalAlignment="Center"
                         FontSize="14"
                         AcceptsReturn="False"
                         MaxLines="3"
                         TextWrapping="Wrap"
                         Text="{Binding TextoInput, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding EnviarMensajeCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1" 
                        Command="{Binding EnviarMensajeCommand}"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Width="40" Height="40" 
                        Background="#7163BA" 
                        BorderBrush="#7163BA">
                    <materialDesign:PackIcon Kind="Send" Foreground="White" />
                </Button>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>