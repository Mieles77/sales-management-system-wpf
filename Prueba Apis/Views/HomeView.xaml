<Page x:Class="Prueba_Apis.Views.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Prueba_Apis.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeView">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- CARD DE BIENVENIDA -->
            <materialDesign:Card Grid.Row="0"
                                Background="#7163BA" 
                                UniformCornerRadius="20" 
                                Padding="30" 
                                Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="¡Hola de nuevo!" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="White"
                              TextWrapping="Wrap"/>
                    <TextBlock Text="Bienvenido a tu panel de control. Aquí tienes un resumen de hoy." 
                              Foreground="#D9CFC7" 
                              FontSize="14" 
                              Margin="0,5,0,0"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- CARDS DE ESTADÍSTICAS -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!-- Card 1: Productos -->
                <materialDesign:Card Grid.Column="0"
                                    UniformCornerRadius="20" 
                                    Padding="20" 
                                    Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                               Width="50" 
                               Height="50"
                               CornerRadius="25"
                               Background="#F3F0FF"
                               VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="AtomVariant" 
                                                    Foreground="#7163BA" 
                                                    Width="28" 
                                                    Height="28"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
                                   Margin="15,0,0,0"
                                   VerticalAlignment="Center">
                            <TextBlock Text="Productos Vendidos" 
                                      FontSize="12" 
                                      Foreground="Gray"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding ProductosVendidos, StringFormat={}{0} Vendidos}" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Card 2: Alertas -->
                <materialDesign:Card Grid.Column="2"
                                    UniformCornerRadius="20" 
                                    Padding="20" 
                                    Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                               Width="50" 
                               Height="50"
                               CornerRadius="25"
                               Background="#FFF3E0"
                               VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Bell" 
                                                    Foreground="#FF9800" 
                                                    Width="28" 
                                                    Height="28"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
                                   Margin="15,0,0,0"
                                   VerticalAlignment="Center">
                            <TextBlock Text="Alertas" 
                                      FontSize="12" 
                                      Foreground="Gray"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding AlertasPendientes, StringFormat={}{0} Pendientes}" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- TÍTULO ACTIVIDAD -->
            <TextBlock Grid.Row="2"
                      Text="Actividad Reciente" 
                      FontSize="20" 
                      FontWeight="SemiBold" 
                      Margin="0,10,0,15"/>

            <!-- CARD DE ACTIVIDAD -->
            <materialDesign:Card Grid.Row="3"
                    UniformCornerRadius="20" 
                    Background="White" 
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                  materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                                  Height="300">
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding MovimientosRecientes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="10,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <materialDesign:PackIcon Grid.Column="0" 
                                Width="35" Height="35" VerticalAlignment="Center" Margin="0,0,15,0">
                                                <materialDesign:PackIcon.Style>
                                                    <Style TargetType="materialDesign:PackIcon">
                                                        <Setter Property="Kind" Value="ArrowDownBoldCircle"/>
                                                        <Setter Property="Foreground" Value="#2196F3"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Tipo}" Value="Venta">
                                                                <Setter Property="Kind" Value="ArrowUpBoldCircle"/>
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialDesign:PackIcon.Style>
                                            </materialDesign:PackIcon>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Descripcion}" FontWeight="SemiBold" FontSize="14" Foreground="#333333"/>
                                                <TextBlock Text="{Binding Fecha, StringFormat={}{0:dd MMM}}" FontSize="11" Foreground="Gray"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="16" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding Monto, StringFormat={}{0:C0}}"/>
                                                        <Setter Property="Foreground" Value="#2196F3"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Tipo}" Value="Venta">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                                <Setter Property="Text" Value="{Binding Monto, StringFormat={}+ {0:C0}}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
            <TextBlock Grid.Row="4"
                          Text="Estadisticas" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Margin="0,10,0,15"/>
            <Grid Grid.Row="5" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!--Card 1 Dinero Vendido-->
                <materialDesign:Card Grid.Column="0" UniformCornerRadius="20" Background="White" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
           Width="50" 
           Height="50"
           CornerRadius="25"
           Background="#EBF4DD"
           VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CashMultiple" 
                                Foreground="#8BAE66" 
                                Width="28" 
                                Height="28"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
               Margin="15,0,0,0"
               VerticalAlignment="Center">
                            <TextBlock Text="Vendido Hoy" 
                  FontSize="12" 
                  Foreground="Gray"
                  TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding VendidoHoy, StringFormat=C}" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
                <!--Card 2 Cantidades-->
                <materialDesign:Card Grid.Column="2" UniformCornerRadius="20" Background="White" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
Width="50" 
Height="50"
CornerRadius="25"
Background="#A4CCD9"
VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ChemicalWeapon" 
                     Foreground="#134686" 
                     Width="28" 
                     Height="28"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
    Margin="15,0,0,0"
    VerticalAlignment="Center">
                            <TextBlock Text="Alertas" 
       FontSize="12" 
       Foreground="Gray"
       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding CantidadProductos, StringFormat={}{0} Productos}" 
           FontSize="20" 
           FontWeight="Bold"
           Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>