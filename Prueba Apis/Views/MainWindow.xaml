<Window x:Class="Prueba_Apis.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Prueba_Apis"
        Title="Login"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border
        CornerRadius="20"
        Background="#E2E2E6"
        Padding="20,0,20,20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Margin="0,10,10,0">
                <Button Click="Minimizar_Click" Margin="5,0">
                    <materialDesign:PackIcon Kind="Minus" Foreground="#7163BA" Width="20" Height="20"/>
                </Button>

                <Button Click="Maximizar_Click" Margin="5,0">
                    <materialDesign:PackIcon Kind="CheckboxBlankOutline" Foreground="#7163BA" Width="20" Height="20"/>
                </Button>

                <Button Click="Cerrar_Click" Margin="5,0">
                    <materialDesign:PackIcon Kind="Close" Foreground="#7163BA" Width="20" Height="20"/>
                </Button>
            </StackPanel>
            <materialDesign:Card Grid.Column="0" 
                                 UniformCornerRadius="20"
                                 Width="70"
                                 Margin="5,20,45,0"
                                 Background="#7163BA"
                                 Padding="15">
                <ListBox x:Name="sideBar" BorderThickness="0" Background="Transparent" VerticalAlignment="Top" Width="62" Margin="-2,0,0,0" SelectedIndex="2" SelectionChanged="sideBar_SelectionChanged">
