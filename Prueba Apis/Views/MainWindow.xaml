<Window x:Class="Prueba_Apis.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Prueba_Apis"
        Title="Sistema de Gestión"
        MinHeight="500"
        MinWidth="900"
        Height="600"
        Width="1100"
        WindowStartupLocation="CenterScreen"        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="#E2E2E6"
            Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="90"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- BARRA DE TÍTULO -->
            <Grid Grid.Row="0" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="2"
                  Height="40"
                  Background="Transparent">

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,15,0">
                    <Button Click="Ajustes_Click" 
        Margin="5,0"
        Width="30"
        Height="30"
        ToolTip="Cerrar">
                        <materialDesign:PackIcon Kind="Cog" 
        Foreground="#7163BA" 
        Width="18" 
        Height="18"/>
                    </Button>
                    <Button Click="Minimizar_Click" 
                            Margin="5,0"
                            Width="30"
                            Height="30"
                            ToolTip="Minimizar">
                        <materialDesign:PackIcon Kind="Minus" 
                                                Foreground="#7163BA" 
                                                Width="18" 
                                                Height="18"/>
                    </Button>

                    <Button Click="Maximizar_Click" 
                            Margin="5,0"
                            Width="30"
                            Height="30"
                            ToolTip="Maximizar">
                        <materialDesign:PackIcon Kind="CheckboxBlankOutline" 
                                                Foreground="#7163BA" 
                                                Width="18" 
                                                Height="18"/>
                    </Button>

                    <Button Click="Cerrar_Click" 
                            Margin="5,0"
                            Width="30"
                            Height="30"
                            ToolTip="Cerrar">
                        <materialDesign:PackIcon Kind="Close" 
                                                Foreground="#7163BA" 
                                                Width="18" 
                                                Height="18"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- SIDEBAR -->
            <materialDesign:Card Grid.Row="1" 
                                 Grid.Column="0"
                                 UniformCornerRadius="20"
                                 Background="#7163BA"
                                 Padding="10"
                                 Margin="5,0,0,5">
                <ListBox x:Name="sideBar" 
                         BorderThickness="0" 
                         Background="Transparent" 
                         VerticalAlignment="Top"
                         HorizontalContentAlignment="Center"
                         SelectedIndex="2" 
                         SelectionChanged="sideBar_SelectionChanged">

                    <!-- Notificaciones -->
                    <Border Background="Transparent" 
                            BorderBrush="White" 
                            BorderThickness="1" 
                            CornerRadius="7"
                            Padding="8"
                            Margin="0,5">
                        <local:NavButton Padding="6" 
                                        Icon="M10 21H14C14 22.1 13.1 23 12 23S10 22.1 10 21M21 19V20H3V19L5 17V11C5 7.9 7 5.2 10 4.3V4C10 2.9 10.9 2 12 2S14 2.9 14 4V4.3C17 5.2 19 7.9 19 11V17L21 19M17 11C17 8.2 14.8 6 12 6S7 8.2 7 11V18H17V11Z"/>
                    </Border>

                    <!-- Separador -->
                    <Separator Background="White" 
                              Opacity="0.5"
                              Margin="5,10"/>

                    <!-- Home -->
                    <local:NavButton NavLink="HomeView.xaml" 
                                    Margin="0,10,0,5" 
                                    Padding="10" 
                                    Icon="M9,13H15V19H18V10L12,5.5L6,10V19H9V13M4,21V9L12,3L20,9V21H4Z"
                                    ToolTip="Inicio"/>

                    <!-- Registrar -->
                    <local:NavButton NavLink="RegisterView.xaml" 
                                    Margin="0,5" 
                                    Padding="10" 
                                    Icon="M13.3 20.86L12 20L9 22L6 20L3 22V3H21V13.34C20.37 13.12 19.7 13 19 13V5H5V18.26L6 17.6L9 19.6L12 17.6L13.04 18.29C13 18.5 13 18.76 13 19C13 19.65 13.1 20.28 13.3 20.86M17 7V9H7V7H17M15 11V13H7V11H15M18 18V16L15 19L18 22V20H22V18H18Z"
                                    ToolTip="Registrar"/>

                    <!-- Vender -->
                    <local:NavButton Margin="0,5" 
                                    Padding="10"
                                     NavLink="SalesWindow.xaml"
                                    Icon="M15 15V17H18V20H20V17H23V15H20V12H18V15M14.97 11.61C14.85 10.28 13.59 8.97 12 9C10.3 9.03 9 10.3 9 12C9 13.7 10.3 14.94 12 15C12.38 15 12.77 14.92 13.14 14.77C13.41 13.67 13.86 12.63 14.97 11.61M13 16H7C7 14.9 6.11 14 5 14V10C6.11 10 7 9.11 7 8H17C17 9.11 17.9 10 19 10V10.06C19.67 10.06 20.34 10.18 21 10.4V6H3V18H13.32C13.1 17.33 13 16.66 13 16Z"
                                    ToolTip="Vender"/>

                    <!-- IA -->
                    <local:NavButton Margin="0,5,0,10" 
                                    Padding="10" 
                                    Icon="M19.8 5.67C21.05 7.19 21.82 9.04 22 11H19.94C19.74 9.57 19.16 8.22 18.26 7.1L19.8 5.67M13 2.05C14.96 2.24 16.81 3 18.33 4.26L16.9 5.69C15.77 4.8 14.42 4.24 13 4.05V2.05M11 2.06C9.04 2.26 7.19 3.03 5.67 4.27L7.1 5.69C8.23 4.81 9.58 4.24 11 4.06V2.06M4.26 5.67L5.63 7.06V7.1C4.75 8.23 4.18 9.58 4 11H2C2.21 9.04 3 7.18 4.26 5.67M2 14V19L3.6 17.4C5.38 20.17 8.47 22 12 22C16.82 22 20.87 18.55 21.8 14H19.75C18.86 17.45 15.72 20 12 20C9.05 20 6.39 18.39 5 16L7 14H2M12 17L13.56 13.58L17 12L13.56 10.44L12 7L10.43 10.44L7 12L10.43 13.58L12 17Z"
                                    ToolTip="Modus IA"/>
                </ListBox>
            </materialDesign:Card>

            <!-- CONTENIDO PRINCIPAL -->
            <Frame x:Name="MainFrame" 
                   Grid.Row="1"
                   Grid.Column="1"
                   NavigationUIVisibility="Hidden"
                   Margin="10,0,5,5"/>
        </Grid>
    </Border>
</Window>