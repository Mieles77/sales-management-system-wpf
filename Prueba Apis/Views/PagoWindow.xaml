<Window x:Class="Prueba_Apis.Views.PagoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Finalizar Pago" Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Border Background="White" CornerRadius="20" BorderBrush="#7163BA" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="CashRegister" Foreground="#7163BA" Width="40" Height="40" HorizontalAlignment="Center"/>
                <TextBlock Text="FINALIZAR VENTA" FontSize="20" FontWeight="Bold" Foreground="#7163BA"/>
            </StackPanel>

            <materialDesign:Card Grid.Row="1" Background="#F5F5F5" UniformCornerRadius="15" Padding="15">
                <StackPanel>
                    <TextBlock Text="TOTAL A COBRAR" HorizontalAlignment="Center" FontSize="12" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotal" Text="{Binding TotalVenta, StringFormat={}{0:C0}}" 
                               HorizontalAlignment="Center" FontSize="36" FontWeight="Black" Foreground="#7163BA"/>
                </StackPanel>
            </materialDesign:Card>

            <StackPanel Grid.Row="2" Margin="0,20,0,10">
                <TextBlock Text="Método de Pago" Margin="0,0,0,10" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="rbEfectivo" Content="Efectivo" IsChecked="True" 
                                 Style="{StaticResource MaterialDesignTabRadioButton}" Margin="0,0,20,0"/>
                    <RadioButton x:Name="rbTransferencia" Content="Transferencia" 
                                 Style="{StaticResource MaterialDesignTabRadioButton}"/>
                    <RadioButton x:Name="rbCredito" Content="Credito" 
                                 Style="{StaticResource MaterialDesignTabRadioButton}" Margin="20,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="3" VerticalAlignment="Center" 
                        Visibility="{Binding IsChecked, ElementName=rbEfectivo, Converter={StaticResource BooleanToVisibilityConverter}}">

                <TextBox x:Name="txtPagaCon" materialDesign:HintAssist.Hint="Paga con:"
                         FontSize="24" HorizontalContentAlignment="Center"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="40,0" PreviewTextInput="SoloNumeros" TextChanged="CalcularVueltas"/>

                <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                    <TextBlock Text="SUS VUELTAS:" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtVueltas" Text="$ 0" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="3" VerticalAlignment="Center" 
            Visibility="{Binding IsChecked, ElementName=rbCredito, Converter={StaticResource BooleanToVisibilityConverter}}">

                <TextBox x:Name="txtDeudor" materialDesign:HintAssist.Hint="Nombre: "
             FontSize="24" HorizontalContentAlignment="Center"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             Margin="40,0"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="CANCELAR" Style="{StaticResource MaterialDesignFlatButton}" 
                        IsCancel="True" Foreground="Red" Margin="0,0,10,0"/>
                <Button Content="CONFIRMAR PAGO" Background="#7163BA" BorderBrush="#7163BA"
                        Width="180" Height="45" Click="Confirmar_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>