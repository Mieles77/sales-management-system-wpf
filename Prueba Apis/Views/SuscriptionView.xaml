<Window x:Class="Prueba_Apis.Views.SuscriptionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Activar Plan" Height="550" Width="450"
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonRegister">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" 
                Background="#7163BA" 
                BorderBrush="#7163BA" 
                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" Background="White" BorderBrush="#7163BA" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,10,0,20">
                <materialDesign:PackIcon Kind="Crown" Foreground="#7163BA" Width="50" Height="50" HorizontalAlignment="Center"/>
                <TextBlock Text="¡Lleva tu tienda al siguiente nivel!" FontSize="20" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                <Border Background="#E8E6F7" CornerRadius="10" Padding="10,5" Margin="0,15" HorizontalAlignment="Center">
                    <TextBlock Text="PRUEBA GRATUITA POR 15 DÍAS" Foreground="#7163BA" FontWeight="Bold" FontSize="12"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="20,0">

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="CheckDecagram" Foreground="#4CAF50" Width="20" Height="20"/>
                    <TextBlock Text="Inventario ilimitado en la nube" Margin="15,0" FontSize="14" Foreground="#555"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="Robot" Foreground="#7163BA" Width="20" Height="20"/>
                    <TextBlock Text="Asistente IA Gemini ilimitado" Margin="15,0" FontSize="14" Foreground="#555"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="ChartBar" Foreground="#2196F3" Width="20" Height="20"/>
                    <TextBlock Text="Reportes de ventas avanzados" Margin="15,0" FontSize="14" Foreground="#555"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="Headset" Foreground="#FF9800" Width="20" Height="20"/>
                    <TextBlock Text="Soporte técnico 24/7" Margin="15,0" FontSize="14" Foreground="#555"/>
                </StackPanel>

            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="$39,900" FontSize="36" FontWeight="Bold" Foreground="#7163BA" VerticalAlignment="Bottom"/>
                    <TextBlock Text="COP/mes" FontSize="14" Foreground="Gray" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                </StackPanel>

                <Button Content="COMENZAR SUSCRIPCIÓN MENSUAL" 
            Height="50" 
            Background="#7163BA" 
            BorderBrush="#7163BA"
            FontSize="15" FontWeight="Bold"
            materialDesign:ButtonAssist.CornerRadius="15"
            Click="StartTrial_Click"
            Style="{StaticResource ButtonRegister}"/>

                <TextBlock Text="15 días gratis • Después $39,900 COP/mes • Cancela cuando quieras" 
               HorizontalAlignment="Center" Margin="0,10,0,0" 
               Foreground="Gray" FontSize="11" 
               TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,174,0,-26" Grid.RowSpan="2">
                <Button Content="Verificar pago manual" 
            Style="{StaticResource MaterialDesignFlatButton}" 
            Foreground="#7163BA" 
            Click="VerificarSuscripcion_Click"
            Margin="5"/>
                <TextBlock Text="•" VerticalAlignment="Center" Foreground="Gray" Margin="10,0"/>
                <Button Content="Cerrar Sesión" 
            Style="{StaticResource MaterialDesignFlatButton}" 
            Foreground="Gray" 
            Click="Logout_Click"
            Margin="5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>