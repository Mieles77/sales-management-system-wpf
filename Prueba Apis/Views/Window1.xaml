<Window x:Class="Prueba_Apis.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prueba_Apis.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Iniciar Sesión" 
        Height="550" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER CON GRADIENTE -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueMidBrush}"
                CornerRadius="0,0,50,50">
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="AccountCircle" 
                                       Width="80" 
                                       Height="80"
                                       Foreground="White"
                                       Margin="0,0,0,16"/>
                <TextBlock Text="Bienvenido" 
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Inicia sesión para continuar" 
                          FontSize="14"
                          Foreground="White"
                          Opacity="0.8"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- CONTENIDO -->
        <StackPanel Grid.Row="1" 
                   VerticalAlignment="Center"
                   Margin="40,0">

            <!-- MENSAJE DE ESTADO -->
            <TextBlock x:Name="txtStatus" 
                      Text="Inicia sesión con tu cuenta de Google"
                      TextAlignment="Center"
                      FontSize="14"
                      Margin="0,0,0,24"
                      Foreground="{DynamicResource MaterialDesignBody}"
                      Opacity="0.7"/>

            <!-- BOTÓN DE GOOGLE -->
            <Button x:Name="btnGoogleLogin"
                   Height="50"
                   Click="BtnGoogleLogin_Click"
                   Style="{DynamicResource MaterialDesignContainedButton}"
                   Background="White"
                   Foreground="#4285F4"
                   BorderBrush="#4285F4"
                   BorderThickness="1">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <!-- Logo de Google (usando PackIcon) -->
                        <Viewbox Width="24" Height="24" Margin="0,0,12,0">
                            <Canvas Width="24" Height="24">
                                <Path Fill="#4285F4" Data="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                <Path Fill="#34A853" Data="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                <Path Fill="#FBBC05" Data="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                <Path Fill="#EA4335" Data="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Continuar con Google" 
                                  VerticalAlignment="Center"
                                  FontWeight="Medium"
                                  FontSize="15"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!-- LOADING INDICATOR -->
            <StackPanel x:Name="loadingPanel" 
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       Visibility="Collapsed">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            IsIndeterminate="True"
                            Width="24"
                            Height="24"
                            Margin="0,0,12,0"/>
                <TextBlock Text="Autenticando..." 
                          VerticalAlignment="Center"
                          Opacity="0.7"/>
            </StackPanel>

            <!-- INFORMACIÓN ADICIONAL -->
            <Border Background="{DynamicResource MaterialDesignDivider}"
                   Padding="16"
                   CornerRadius="8"
                   Margin="0,32,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="ShieldCheck" 
                                               Width="16" 
                                               Height="16"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"
                                               Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                        <TextBlock Text="Inicio de sesión seguro"
                                   FontSize="12"
                                   Opacity="0.7"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Lock" 
                                               Width="16" 
                                               Height="16"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"
                                               Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                        <TextBlock Text="Tus datos están protegidos"
                                   FontSize="12"
                                   Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
