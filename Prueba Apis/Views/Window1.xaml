<Window x:Class="Prueba_Apis.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Bienvenido" Height="650" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonRegister">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" 
                        Background="#7163BA" 
                        BorderBrush="#7163BA" 
                        BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="30" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Color="#7163BA" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Style="{StaticResource MaterialDesignFlatButton}" 
                    Content="✕" Foreground="White" Panel.ZIndex="1" Margin="10" 
                    Click="Cerrar_Click" FontSize="18"/>

            <Border Grid.Row="0" Background="#7163BA" CornerRadius="20,20,0,50">
                <StackPanel VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Storefront" Width="60" Height="60" 
                                           HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="MI TIENDA" FontSize="26" FontWeight="Black" 
                               HorizontalAlignment="Center" Foreground="White" Margin="0,5"/>
                    <TextBlock Text="Gestión Inteligente de Inventario" FontSize="12" 
                               HorizontalAlignment="Center" Foreground="#E1DDF9"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Margin="35,20,35,10">

                <TextBlock Text="Comienza con tu cuenta" FontSize="14" Foreground="Gray" 
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <Button x:Name="btnGoogleLogin" Click="BtnGoogleLogin_Click"
                        Height="50" Background="White" BorderBrush="#DDDDDD" 
                        Foreground="#333333">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Google" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Continuar con Google" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Grid Margin="0,25">
                    <Separator Background="#EEEEEE"/>
                    <TextBlock Text="O ACCESO OFFLINE" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Background="White" Padding="15,0" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold"/>
                </Grid>

                <StackPanel>
                    <materialDesign:Card UniformCornerRadius="12" Background="#F8F9FD" Padding="5">
                        <TextBox x:Name="txtCorreoOffline" 
                                 materialDesign:HintAssist.Hint="Correo electrónico"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="10,0" BorderThickness="0" FontSize="14"/>
                    </materialDesign:Card>

                    <materialDesign:Card UniformCornerRadius="12" Background="#F8F9FD" Padding="5" Margin="0,15">
                        <PasswordBox x:Name="txtPassOffline" 
                                     materialDesign:HintAssist.Hint="Contraseña"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     Margin="10,0" BorderThickness="0" FontSize="14"/>
                    </materialDesign:Card>

                    <Button Content="ENTRAR AL SISTEMA" Click="BtnLoginLocal_Click"
                            Background="#7163BA" BorderBrush="#7163BA" Height="50" FontSize="14" FontWeight="Bold" Margin="0,10" Style="{StaticResource ButtonRegister}">
                    </Button>
                </StackPanel>

                <StackPanel x:Name="loadingPanel" Visibility="Collapsed" Margin="0,15">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                 Value="0" IsIndeterminate="True" Width="30" Height="30" Foreground="#7163BA"/>
                    <TextBlock x:Name="txtStatus" Text="Validando..." HorizontalAlignment="Center" 
                               Margin="0,10" Foreground="#7163BA" FontSize="12"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>